  from flask import Flask, request, send_from_directory, redirect, url_for
import os

app = Flask(__name__)
app.config['UPLOAD_FOLDER'] = 'uploads'  # Папка для загрузки файлов
os.makedirs(app.config['UPLOAD_FOLDER'], exist_ok=True)  # Создание папки, если ее нет

@app.route('/')
def index():
    return '''
    <!doctype html>
    <title>File Upload</title>
    <h1>Upload new File</h1>
    <form method=post enctype=multipart/form-data>
      <input type=file name=file>
      <input type=submit value=Upload>
    </form>
    <h2>Uploaded Files:</h2>
    <ul>
      {}
    </ul>
    '''.format(''.join(f'<li><a href="{url_for("uploaded_file", filename=f)}">{f}</a></li>' for f in os.listdir(app.config['UPLOAD_FOLDER'])))

@app.route('/', methods=['POST'])
def upload_file():
    if 'file' not in request.files:
        return redirect(request.url)
    file = request.files['file']
    if file.filename == '':
        return redirect(request.url)
    file.save(os.path.join(app.config['UPLOAD_FOLDER'], file.filename))
    return redirect(url_for('index'))

@app.route('/uploads/<filename>')
def uploaded_file(filename):
    return send_from_directory(app.config['UPLOAD_FOLDER'], filename)

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
